.password_box{
  border-top: 2rpx #f2f2f2 solid;
  margin-bottom: 140rpx;
}
.password_txt{
  width:75%;
  margin:0 auto;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  
  border-bottom: 2rpx #e2e2e2 solid;
}
.password_img{
  width: 20rpx;
  height: 20rpx;
}
.password_txt input{
  height: 120rpx;
  line-height: 120rpx;
  color: #101010;
  font-size: 28rpx;
  display: block;
}
.submit{
  width: 600rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 40rpx;
  color: #fff;
  background: #FF9800;
  border-radius: 10rpx;
  margin: 0 auto;
  display: block;
}


